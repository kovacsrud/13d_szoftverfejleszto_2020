<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Kutyanevek">
                <DataGrid x:Name="datagridNevek" ItemsSource="{Binding Kutyanevek}" AutoGenerateColumns="False" ColumnWidth="*">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Kutyanév" Binding="{Binding Kutyaneve}" />
                    </DataGrid.Columns>
                </DataGrid>

            </TabItem>
            <TabItem Header="Kutyafajták">
                <DataGrid x:Name="datagridFajtak" ItemsSource="{Binding Kutyafajtak}" AutoGenerateColumns="False" ColumnWidth="*">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Fajta neve" Binding="{Binding Fajtanev}" />
                        <DataGridTextColumn Header="Fajta eredeti neve" Binding="{Binding FajtaEredetinev}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
